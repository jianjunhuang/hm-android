<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <variable
      name="listener"
      type="android.view.View.OnClickListener"/>
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/ll_auth"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eceff1"
      android:onClick="@{listener}"
      android:orientation="vertical">

      <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_account_circle_black_24dp"/>

      <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="JianjunHuang"
        android:textAppearance="@style/TextPrimaryAppearance"/>

      <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"
        android:text="demon903732218@gmail.com"
        android:textAppearance="@style/TextSecondaryAppearance"/>

    </LinearLayout>

    <FrameLayout
      android:id="@+id/fl_budget"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      android:background="?selectableItemBackground"
      android:onClick="@{listener}">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Monthly budget"
        android:textColor="#000000"
        android:textSize="16sp"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:text="ï¿¥3000"
        android:textAppearance="@style/TextSecondaryAppearance"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="#dcdcdc"/>

    </FrameLayout>

    <FrameLayout
      android:background="?selectableItemBackground"
      android:id="@+id/fl_expenses"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      android:onClick="@{listener}">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Regular expenses"
        android:textColor="#000000"
        android:textSize="16sp"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="#dcdcdc"/>

    </FrameLayout>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:paddingStart="16dp"
      android:paddingEnd="16dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Logout"
        android:textColor="#000000"
        android:textSize="16sp"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="#dcdcdc"/>

    </FrameLayout>

  </LinearLayout>
</layout>
