<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.jianjunhuang.setting">

  <uses-permission android:name="android.permission.INTERNET"/>
  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name="com.jianjunhuang.common_base.base.BaseApplication"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    android:usesCleartextTraffic="true">
    <activity android:name=".SettingActivity">
      <intent-filter>
        <category android:name="android.intent.category.LAUNCHER"/>
        <action android:name="android.intent.action.MAIN"/>
      </intent-filter>
    </activity>
    <activity android:name=".BudgetActivity"/>
    <activity android:name=".RegularExpensesActivity"/>
    <activity android:name=".AddRegularExpensesActivity"/>
    <activity
      android:name=".view.TypeActivity"
      android:windowSoftInputMode="adjustResize"/>
  </application>
</manifest>
