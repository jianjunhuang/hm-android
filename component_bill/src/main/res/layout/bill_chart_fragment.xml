<?xml version="1.0" encoding="utf-8"?>
<layout>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/tv_title_expend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Expend"
        android:textAppearance="@style/TextPrimaryAppearance"
        android:textColor="@color/expendRed"/>

      <TextView
        android:id="@+id/tv_expend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="￥5,000"
        android:textAppearance="@style/TextPrimaryAppearance"
        android:textColor="@color/expendRed"/>

      <TextView
        android:id="@+id/tv_title_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Income"
        android:textAppearance="@style/TextPrimaryAppearance"
        android:textColor="@color/incomeGreen"/>

      <TextView
        android:id="@+id/tv_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="￥10,000"
        android:textAppearance="@style/TextPrimaryAppearance"
        android:textColor="@color/incomeGreen"/>


    </LinearLayout>
    <ViewStub
      android:id="@+id/chart_view_stub"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inflatedId="@+id/chart_view_stub"/>

    <FrameLayout
      android:id="@+id/fl_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  </LinearLayout>
</layout>
